<div class="container-fluid">

  <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Registro de Tarjeta</h6>
    </div>
    <div class="card-body">
      <form>
        <div class="input-group mb-3">
          <input type="text" class="form-control form-control-lg" placeholder="Ingresar Tarjeta" id="inputTarjeta">
          <div class="input-group-append">
            <!-- <button class="btn btn-lg btn-primary" type="button" id="button-addon2">CALCULAR</button> -->
            <a href="" class="btn btn-primary btn-icon-split btn-lg" id="btnCalcularTarjeta">
              <span class="icon text-white-50">
                <i class="fas fa-arrow-right"></i>
              </span>
              <span class="text">CALCULAR</span>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="alert alert-danger alert-dismissible fade show" role="alert" style="display:none">
    <strong>Error !</strong> <span class="mensajeError"></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="card shadow mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Informaci&oacute;n de Pago Mensual</h6>
  </div>
    <div class="card-body">
      <form class="formPagoMensual" method="post">
        <input type="hidden" name="guardar" value="1">
        <input type="hidden" name="tarjeta" value="">

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Cliente</label>
            <input name="cliente" type="text" class="form-control" readonly>
          </div>
          <div class="form-group col-md-3">
            <label>Total a Pagar</label>
            <input 
              name="totalPagar" 
              type="text" 
              class="form-control text-left" 
              data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 0, 
              'digitsOptional': false, 'prefix': '$ ', 'placeholder': '0'" readonly>
            <input type="hidden" name="totalPagarNumero" value="">
          </div>
          <div class="form-group col-md-3">
            <label>Recibido</label>
            <input 
              name="recibido" 
              type="text" 
              class="form-control text-left" 
              data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 0, 
              'digitsOptional': false, 'prefix': '$ ', 'placeholder': '0'" required>
              <input type="hidden" name="recibidoNumero" value="">
          </div>
          <div class="form-group col-md-3">
            <label>A Devolver</label>
            <input 
              name="devolver" 
              type="text" 
              class="form-control text-left" 
              data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 0, 
              'digitsOptional': false, 'prefix': '$ ', 'placeholder': '0'" readonly>
              <input type="hidden" name="devolverNumero" value="">
          </div>
        </div>
        <div class="float-right">
          <button type="submit" class="btn btn-primary">Registrar Pago</button>
        </div>
      </form>
    </div>
  </div>

</div>

</div>